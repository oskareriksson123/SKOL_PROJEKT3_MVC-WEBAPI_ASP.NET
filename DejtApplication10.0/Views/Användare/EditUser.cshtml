            <table>
                <tr>
                    <td style="width:160px;height:50px"> <label>Välj en ny profilbild om du vill</label><input type="file" accept="image/png,image/jpg,image/jpeg" name="file1" id="file1" style="width: 100%;" data-val="true" data-val-required="File is required" /> <br /> </td>
                    <td class=".error">  @ViewData["error"]</td>
                </tr>
            </table>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>

