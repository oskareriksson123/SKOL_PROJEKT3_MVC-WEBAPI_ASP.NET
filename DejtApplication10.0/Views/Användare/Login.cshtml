@model DejtApplication10._0.Models.AnvändareModel

@{
    ViewBag.Title = "Logga in";
}

<h2>Logga In</h2>

@using (Html.BeginForm("ValidateLogin","Användare",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    

        <div class="form-group">
            @Html.LabelFor(model => model.AnvändarNamn, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AnvändarNamn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AnvändarNamn, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Lössenord, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Lössenord, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Lössenord, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Logga in" class="btn btn-default" />
            </div>
        </div>
    </div>
    <div class="error"> @ViewData["errorFältTomt"]</div>
}

<div>
    @Html.ActionLink("Inte Medlem? Gå med idag! Klicka här för att registrera dig!", "Register","Användare")
</div>
